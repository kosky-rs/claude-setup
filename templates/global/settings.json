{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Bash(git *)",
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(python *)",
      "Bash(pip *)",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(echo *)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(**/secrets/**)",
      "Read(**/.ssh/**)",
      "Read(**/*.pem)",
      "Read(**/*secret*)",
      "Read(**/.aws/*)",
      "Write(./production.*)",
      "Write(./.env.production)",
      "Bash(rm -rf /)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(curl * | bash)",
      "Bash(curl * | sh)",
      "Bash(wget * | bash)",
      "Bash(wget * | sh)",
      "Bash(* > /dev/sd*)",
      "Bash(dd if=*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(*.py)",
        "hooks": [
          {
            "type": "command",
            "command": "python -m black $file 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "python -m ruff check $file 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Write(*.ts)",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write $file 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Write(*.tsx)",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write $file 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Write(*.js)",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write $file 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Write(*.jsx)",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write $file 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Write(*.json)",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write $file 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Write(*.env*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date +%Y-%m-%d_%H:%M:%S)|WRITE|$file\" >> ~/.claude/security-audit.log 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Write(*secret*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date +%Y-%m-%d_%H:%M:%S)|WRITE|$file\" >> ~/.claude/security-audit.log 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "Bash(git push*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date +%Y-%m-%d_%H:%M:%S)|GIT_PUSH\" >> ~/.claude/security-audit.log 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
